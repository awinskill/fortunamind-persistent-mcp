# =============================================================================
# APPLICATION CONFIGURATION
# =============================================================================

# Environment designation
ENVIRONMENT=production

# Logging level (WARNING for production to reduce noise)
LOG_LEVEL=WARNING

# Server identification
MCP_SERVER_NAME=FortunaMind Persistent MCP Server (Production)

# Python optimization flags
PYTHONUNBUFFERED=1
PYTHONDONTWRITEBYTECODE=1

# =============================================================================
# PERFORMANCE CONFIGURATION
# =============================================================================

# Database connection pool settings
DATABASE_POOL_SIZE=10
DATABASE_MAX_OVERFLOW=20
DATABASE_POOL_TIMEOUT=30
DATABASE_POOL_RECYCLE=3600

# Cache configuration
CACHE_TTL_MINUTES=5
CACHE_MAX_SIZE=1000

# =============================================================================
# SECURITY CONFIGURATION
# =============================================================================

# Rate limiting settings (can be overridden per tier)
DEFAULT_RATE_LIMIT_HOUR=100
DEFAULT_RATE_LIMIT_DAY=1000
DEFAULT_RATE_LIMIT_MONTH=10000

# Session and security
SESSION_TIMEOUT_MINUTES=60
MAX_REQUEST_SIZE_MB=10

# =============================================================================
# MONITORING CONFIGURATION
# =============================================================================

# Health check configuration
HEALTH_CHECK_TIMEOUT_SECONDS=5
HEALTH_CHECK_ENDPOINT=/health
STATUS_ENDPOINT=/status

# Metrics collection
ENABLE_METRICS=true
METRICS_ENDPOINT=/metrics

# =============================================================================
# OPTIONAL INTEGRATIONS
# =============================================================================

# Redis for advanced caching (optional)
# REDIS_URL=redis://localhost:6379/0

# External monitoring (optional)
# SENTRY_DSN=https://your-sentry-dsn@sentry.io/project-id
# DATADOG_API_KEY=your-datadog-api-key

